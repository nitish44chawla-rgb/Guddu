<body>

    <div class="container">
        <h1>Will you be my Valentine? ‚ù§Ô∏è</h1>
        <div class="btn-container">
            <button id="yesBtn" onclick="alert('Yay! ‚ù§Ô∏è')">Yes</button>
            <button id="noBtn" onmouseover="moveButton()" onclick="moveButton()">
                No <span id="smiley">üòä</span>
            </button>
        </div>
    </div>

    <script>
        const reactions = ['üòú', 'üòù', 'üòÇ', 'üòè', 'ü§™', 'üòé'];

        function moveButton() {
            const btn = document.getElementById('noBtn');
            const smiley = document.getElementById('smiley');

            // Change smiley emoji
            const randomReaction = reactions[Math.floor(Math.random() * reactions.length)];
            smiley.innerText = randomReaction;

            // Switch to fixed position so it can move anywhere
            btn.style.position = 'fixed';

            // Calculate safe area (Screen width/height minus button size)
            // Adding a 50px margin so it doesn't touch the very edge
            const padding = 50;
            const maxX = window.innerWidth - btn.offsetWidth - padding;
            const maxY = window.innerHeight - btn.offsetHeight - padding;

            // Generate new coordinates
            const randomX = Math.max(padding, Math.floor(Math.random() * maxX));
            const randomY = Math.max(padding, Math.floor(Math.random() * maxY));

            btn.style.left = randomX + 'px';
            btn.style.top = randomY + 'px';
        }
    </script>
